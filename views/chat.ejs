<html>
    <head>
        <title>chat</title>
        <link rel="stylesheet" href="css/materialize.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <script src="js/materialize.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.2.0/socket.io.js"></script>
    </head>
    <body>
        <div class="container">

            <div class="row">
            <ul class="col s6 collection" id="chatArea">
                <li id="room-status" class="collection-item">
                    <h5>Chat</h5>
                    <p>Join to the room before start messaging</p>
                </li>

            </ul>
            <ul id="room-list" class="col s4 offset-s2 collection">
                <li class="collection-item">
                    Create Room
                    
                    <button id="create-room" href="#modal1"  data-target="modal1" class="btn modal-trigger btn-floating btn-small waves-effect waves-light red right">
                        <i class="material-icons">add</i>
                    </button>
                    
                </li>
                <% db.forEach( room => {%>
                    <li class="collection-item"> <%= room %>
                        <button id="join-room"  value="<%= room %>" class="waves-effect waves-light btn-small right">join</button>
                    </li>
                <% }); %>
            </ul>
            </div>
            <div class="row">
                <form id="chat-form" class="col s6">
                    <div class="input-field col s12">
                        <input id="message" type="text">
                        <label for="message">Message</label>
                    </div>
            </div>
            <div class="row">
                    <div class="input-field col s3">
                        <button id="submit" class="btn waves-effect waves-light" type="submit">Send
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                </form>
            </div>
            </div>

            <div id="modal1" class="modal">
                <form class="col s12">
                    <div class="modal-content">
                        <h4>Create Room</h4>
                            <div class="row">
                                <div class="input-field col s6">
                                    <input placeholder="Room name" id="Room_name" type="text">
                                    <label for="Romm_name">Room name</label>
                                </div>
                            </div>
                    
                    </div>
                    <div class="modal-footer">
                            <button id="add-room" class="btn waves-effect waves-light" type="submit">Create</button>
                    </div>
                </form>
            </div>
            </div>
            <script> 
                const chat = io('/chat');
            </script>
            <script src="js/chat.js"></script>
            <script src="js/rooms.js"></script>
            <script>
                  document.addEventListener('DOMContentLoaded', function() {
                    let elems = document.querySelectorAll('.modal');
                    let instances = M.Modal.init(elems);
                });
            </script>
    </body>
</html>